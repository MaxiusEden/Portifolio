---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Skills from '../components/Skills.astro';

// --- LÓGICA CORRIGIDA ---
// REMOVEMOS todo o fetch daqui.
// Deixamos apenas o valor padrão. O script vai atualizar isso.

const botaniaTubesDescription = `Addon para o mod Botania que permite automação completa do Petal Apothecary. Atingiu +50.000 downloads e recebeu feedback positivo da comunidade no CurseForge.`;

// --- FIM DA LÓGICA ---
---

<Layout title="Filipe Machado | Desenvolvedor de Software">
    <main class="container mx-auto px-4">
        
        <section class="hero text-center py-24 sm:py-32">
            <img
                src="/foto-perfil.jpg"
                alt="Foto de Perfil de Filipe Machado"
                class="w-32 h-32 rounded-full mx-auto mb-8 border-4 border-cyan-400/50 object-cover shadow-lg"
            />
            <h1 class="text-5xl sm:text-7xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-500">
                Filipe Pereira Machado
            </h1>
            <p class="text-xl sm:text-2xl mt-4 text-gray-300">Desenvolvedor Java e Criador de Soluções Inovadoras</p>
            <p class="max-w-2xl mx-auto mt-6 text-gray-400">
                Apaixonado por soluções tecnológicas com foco em performance e eficiência. Proficiente em controlo de versão, desenvolvimento modular e práticas de engenharia de software.
            </p>
            <div class="mt-10 flex flex-col sm:flex-row justify-center gap-4">
                <a href="#projetos" class="bg-cyan-400 text-gray-900 font-bold py-3 px-8 rounded-lg hover:bg-cyan-300 transition-all duration-300 transform hover:scale-105">
                    Ver Projetos
                </a>
                <a href="mailto:filipepm17@gmail.com" class="bg-gray-800/50 border border-gray-700 text-gray-200 font-bold py-3 px-8 rounded-lg hover:bg-gray-700 hover:border-gray-600 transition-all duration-300">
                    Entrar em Contato
                </a>
            </div>
        </section>

        <Skills />

        <section id="projetos" class="py-24">
            <h2 class="text-4xl sm:text-5xl font-bold text-center mb-16">Projetos em Destaque</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                
                <ProjectCard
                    title="Mod BotaniaTubes (Addon para Botania)"
                    description={botaniaTubesDescription}
                    descriptionId="botania-description" tags={['Java', 'Minecraft Forge', 'Gradle']}
                    githubUrl="https://github.com/MaxiusEden/BotaniaTubes"
                    liveUrl="https://www.curseforge.com/minecraft/mc-mods/botaniatubes"
                    imageUrl="/projeto-botaniatubes.png"  
                />

                <ProjectCard
                    title="Aplicativo de Orçamento Municipal"
                    description="Ferramenta para visualização de dados de auxílio municipal com gráficos interativos (Chart.js) e armazenamento local. Design responsivo e acessível."
                    tags={['JavaScript', 'HTML', 'CSS', 'Chart.js']}
                    githubUrl="#"
                    liveUrl="#"
                    imageUrl="/projeto-orcamento.png"  
                />
                <ProjectCard
                    title="Protótipo de Jogo 2D em Unity"
                    description="Side-scroller com mecânicas de coleta de itens, estados de vitória e colisões. Programado em C# com gestão de cenas e pooling de objetos."
                    tags={['C#', 'Unity 2D']}
                    githubUrl="#"
                    liveUrl="#"
                    imageUrl="/projeto-jogo2d.png"
                />

            </div>
        </section>
    </main>

    <script>
    async function fetchCurseForgeDownloads() {
        try {
            // O ID do seu projeto
            const modId = '1183923';
            
            // 1. CHAMADA PARA A NOVA API PÚBLICA (NÃO PRECISA DE CHAVE)
            const response = await fetch(`https://img.shields.io/curseforge/dt/${modId}.json`);
            
            if (!response.ok) {
                throw new Error('Falha ao buscar dados do Shields.io');
            }
            
            const data = await response.json();
            
            // 2. O 'data.value' vem como "59.3k" ou "1.2M"
            // Nós vamos formatar para "+59.3k"
            const newCount = `+${data.value}`; 

            // 3. Acha o elemento (igual antes)
            const descriptionElement = document.getElementById('botania-description');
            
            if (descriptionElement) {
                // 4. Atualiza o texto!
                descriptionElement.textContent = `Addon para o mod Botania que permite automação completa do Petal Apothecary. Atingiu ${newCount} downloads e recebeu feedback positivo da comunidade no CurseForge.`;
            }

        } catch (error) {
            console.warn('Falha ao atualizar downloads ao vivo (Shields.io):', error.message);
            // Se falhar, o usuário vê o "+50.000"
        }
    }

    // Roda o script
    document.addEventListener('DOMContentLoaded', fetchCurseForgeDownloads);
    </script>
</Layout>
