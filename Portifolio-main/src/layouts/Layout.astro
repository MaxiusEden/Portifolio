---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfólio de Filipe Pereira Machado, Desenvolvedor de Software." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Importação da fonte do Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-900 text-gray-100 font-sans">
		<!-- Cabeçalho -->
		<header class="sticky top-0 z-50 bg-gray-900/80 backdrop-blur-sm border-b border-gray-800">
			<nav class="container mx-auto flex justify-between items-center px-4 py-4">
				<a href="/" class="text-xl font-bold hover:text-cyan-400 transition-colors">
					Filipe Machado
				</a>
				<div class="hidden md:flex items-center gap-6 text-sm">
					<a href="#habilidades" class="hover:text-cyan-400 transition-colors">Habilidades</a>
					<a href="#projetos" class="hover:text-cyan-400 transition-colors">Projetos</a>
					
					<a href="https://github.com/MaxiusEden" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-400 transition-colors">GitHub</a>
					<a href="https://linkedin.com/in/filipe-pereira-machado-360b502b6" target="_blank" rel="noopener noreferrer" class="hover:text-cyan-400 transition-colors">LinkedIn</a>
					
					<a href="/FilipeMachado_Dev_ANO2025.pdf" download class="bg-cyan-400 text-gray-900 font-bold py-2 px-4 rounded-lg hover:bg-cyan-300 transition-all duration-300">
						Baixar CV
					</a>
				</div>
			</nav>
		</header>

		<!-- O <slot /> é onde o conteúdo da sua página (index.astro) será inserido -->
		<slot />

		<!-- Rodapé -->
		<footer class="text-center py-10 mt-20 border-t border-gray-800">
			<p class="text-gray-500">&copy; {new Date().getFullYear()} Filipe Pereira Machado. Construído com Astro e Tailwind CSS.</p>
		</footer>
	</body>
</html>